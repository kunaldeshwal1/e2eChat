generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum RoomType {
  public
  private
}

model User {
  id       String       @id @default(uuid())
  email    String    @unique
  name     String    @unique
  password String
  messages Message[]
  rooms    Room[]   
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  senderId  String
  sender    User     @relation(fields: [senderId], references: [id])
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id])
}

model Room {
  id       String       @id @default(uuid())
  name     String       @unique
  type     RoomType     @default(public)
  content Message[]
  users    User[]  
}
